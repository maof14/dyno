@inherits FluxorComponent

<MudDialog @onkeypress="@OnKeyPress">
    <TitleContent>
        Log in
    </TitleContent>
    <DialogContent>
        <MudTextField Label="Username" @bind-Value="LoginModel.Username" Immediate="true"></MudTextField>
        <MudTextField Label="Password" @bind-Value="LoginModel.Password" InputType="InputType.Password" Immediate="true"></MudTextField>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Ok</MudButton>
    </DialogActions>
</MudDialog>